<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_veiwpager2_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageview_fragment_main"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/ic_linked_in"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/imageview_arrow_left_fragment_main"
        android:layout_width="300dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/imageview_fragment_main"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:rotation="180"
        android:background="@drawable/ic_arrow"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/textview_push_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="밀어서 둘러보기"
        app:layout_constraintBottom_toTopOf="@+id/imageview_arrow_left_fragment_main"
        android:paddingLeft="100dp"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/imageview_arrow_right_fragment_main"
        android:layout_width="300dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/imageview_fragment_main"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_arrow"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/textview_push_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="밀어서 로그인"
        app:layout_constraintTop_toBottomOf="@+id/imageview_arrow_right_fragment_main"
        android:paddingLeft="200dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>